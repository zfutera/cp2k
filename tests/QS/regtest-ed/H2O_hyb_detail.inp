      &ENERGY_DECOMPOSITION_ANALYSIS
         DETAILED_ENERGY T
      &END ENERGY_DECOMPOSITION_ANALYSIS
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587
    H   0.000000   -0.757136    0.520545
    H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET ORB DZVP-GTH-BLYP
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET ORB DZVP-GTH-BLYP
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT wat
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
